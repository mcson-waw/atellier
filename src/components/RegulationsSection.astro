---
/**
 * Regulations Section Component
 * Terms, privacy, and legal information
 */
import { getCollection } from 'astro:content';
import SectionWrapper from './SectionWrapper.astro';

const regulationsContent = await getCollection('regulations');
const content = regulationsContent[0];
const { Content } = await content.render();
---

<SectionWrapper id="regulations" background={content.data.background}>
  <div class="max-w-3xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16" data-animate="fade-up">
      <h2 class="text-display md:text-display-lg text-forest-900 mb-4">
        {content.data.title}
      </h2>
      {content.data.subtitle && (
        <p class="text-body-lg text-forest-600">
          {content.data.subtitle}
        </p>
      )}
    </div>

    <!-- Regulations Sections -->
    {content.data.sections && (
      <div class="space-y-8 mb-16" data-stagger="0.1">
        {content.data.sections.map((section) => (
          <div class="border-l-4 border-forest-300 pl-6">
            <h3 class="text-heading-sm text-forest-800 mb-3">
              {section.title}
            </h3>
            <p class="text-body text-forest-600">
              {section.content}
            </p>
          </div>
        ))}
      </div>
    )}

    <!-- Extended Content -->
    <div data-animate="fade-up">
      <div class="prose-nature">
        <Content />
      </div>
    </div>
  </div>
</SectionWrapper>
