---
/**
 * Main Index Page
 * Assembles all sections into a single-page landing
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Hero from '../components/Hero.astro';
import WhySection from '../components/WhySection.astro';
import KursSection from '../components/KursSection.astro';
import FAQSection from '../components/FAQSection.astro';
import AboutSection from '../components/AboutSection.astro';
import CTASection from '../components/CTASection.astro';
import Footer from '../components/Footer.astro';
import SmoothScrollWrapper from '../components/SmoothScrollWrapper.astro';

// Get hero content for the page
const heroContent = await getCollection('hero');
const hero = heroContent[0];
---

<BaseLayout
  title="Atelier Spokoju | Kurs MBSR - Redukcja Stresu przez Uważność"
  description="Uważne życie to lepsze życie. 8-tygodniowy kurs MBSR - redukcja stresu oparta na uważności. Zapraszam do kontaktu."
>
  <Nav />
  
  <SmoothScrollWrapper>
    <main>
      <!-- Hero Section -->
      <Hero
        title={hero.data.title}
        subtitle={hero.data.subtitle}
        backgroundImage={hero.data.backgroundImage}
        ctaText={hero.data.ctaText}
        ctaHref={hero.data.ctaHref}
      />

      <!-- Dla kogo jest ta strona -->
      <WhySection />

      <!-- Kurs MBSR - informacje o kursie -->
      <KursSection />

      <!-- FAQ Section -->
      <FAQSection />

      <!-- O mnie (krótka wersja) -->
      <AboutSection />

      <!-- Dla kogo jest kurs - CTA -->
      <CTASection />
    </main>

    <Footer />
  </SmoothScrollWrapper>
</BaseLayout>
